{{#vt-typography/headers/heading-h3 class='vessel-name'}}
  {{vessel.name}}
{{/vt-typography/headers/heading-h3}}

{{vessels/vessel-details/mini-stats
  report=lastReport
}}

{{vessels/vessel-details/google-map
  reports=sortedReportsDesc
}}

{{#vt-typography/headers/heading-h3 class='rob-per-day-chart-header'}}
  Remaining on board chart
{{/vt-typography/headers/heading-h3}}

{{vessels/vessel-details/rob-per-day-chart
  data=sortedReportsAsc
  onDayChange=(action (mut selectedDay))
  onDayHover=(action (mut hoveredDay))
}}

<div class="chart-stats">
  {{vessels/vessel-details/day-statistics
    data=sortedReportsAsc
    day=selectedDay
  }}

  {{vessels/vessel-details/day-statistics
    data=sortedReportsAsc
    day=hoveredDay
  }}
</div>


{{position-reports
  reports=sortedReportsDesc
  vesselId=vessel.id
}}
